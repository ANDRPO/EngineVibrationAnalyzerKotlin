<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.papmobdev.enginevibrationanalyzerkotlin.presentation.activivties.diagnostic.ManualViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.activivties.diagnostic.ManualActivity">

        <TextView
            android:id="@+id/textGuideImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontalActivitySelectCarsOptions"
            android:layout_marginTop="@dimen/marginHorizontalActivitySelectCarsOptions"
            android:text="Разместите устройство так, как показано на рисунке"
            android:textColor="@color/colorText"
            android:textSize="@dimen/primaryText"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageManual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/marginHorizontalActivitySelectCarsOptions"
            android:background="@color/colorText"
            android:layout_marginBottom="526dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:scaleType="centerInside"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/checkBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textGuideImage"
            tools:ignore="ContentDescription" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginHorizontalActivitySelectCarsOptions"
            android:layout_marginBottom="@dimen/marginHorizontalActivitySelectCarsOptions"
            android:checked="@={viewModel.checkNotShowActivity}"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintBottom_toTopOf="@+id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textGuideImage"
            app:layout_constraintVertical_bias="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Больше не показывать"
            android:textSize="@dimen/secondaryText"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="@+id/checkBox" />

        <Button
            android:id="@+id/back"
            android:layout_width="139dp"
            android:layout_height="48dp"
            android:layout_marginVertical="30dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Назад"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/next"
            android:layout_width="139dp"
            android:layout_height="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Далее"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>